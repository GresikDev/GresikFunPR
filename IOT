#include <FastLED.h>
#define LED_PIN D4
#define NUM_LEDS 5

CRGB leds[NUM_LEDS];

void setup() {
  FastLED.addLeds<WS2812, LED_PIN, GRB>(leds, NUM_LEDS);
}
void loop() {
 nyalakan (0 , 0, 255);
 nyalakan (255 , 0 ,0);
}
void nyalakan (int R, int G, int B){
  leds[0] = CRGB (R,G,B);
  leds[1] = CRGB (R,G,B);
  leds[2] = CRGB (R,G,B);
  leds[3] = CRGB (R,G,B);
  leds[4] = CRGB (R,G,B);
  FastLED.show();
  delay(1000);
}
